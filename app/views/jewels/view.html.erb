<div class="header">
<%=link_to root_path do%>
<div class="header-title-container">
  <p class="header-title">
    Chauncey AND Coco
  </p>
  <p class="header-subtitle">
    <%= image_tag 'logo.png' %>
    Handmade in HTX
    <%= image_tag 'logo.png' %>
  </p>
</div>
<%end%>
</div>
<div class="lookbook-container">

  <div class="sidebar">
    <ul>
      <li>
        <%= link_to collection_path do%>COLLECTION
        <%end%>
      </li>
      <li>
        <%=link_to products_path do%>APPAREL<%end%>
      </li>
      <li>
        <%=link_to gifts_path do %>GIFTS<%end%>
      </li>
      <li>
        <%=link_to jewels_path do%>JEWELRY<%end%>
      </li>
      <li>
        <%=link_to about_path do%>ABOUT US<%end%>
      </li>
      <li>
        <%=link_to contact_path do%>CONTACT US<%end%>
      </li>
      <li>
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>(CART)
      </li>
    </ul>

  </div>
  <div class="view-container">
<%= image_tag "#{@jewel.img_file}.jpg", {:class => "jewelry_view_picture"} %>
<div class="item-info">
  <p class="item"><%= @jewel.item%><p>
    <p style="font-size:25px;">
      <%= @jewel.description%>
    </p>
    <p style="font-size:30px;">
      <%= number_to_currency(@jewel.price.to_i) %>
    </p>
    <p style=margin:5px;font-size:25px;>
      Quantity
    </p>

    <%= form_for @jewel do |jewel| %>
        <%= jewel.number_field :quantity, :value => 1, :max => 10, :min => 1, :class => 'number_field' %>
    <%end%>


<div class="addtocart">
      ADD TO CART
    </div>
    <p>
      Shipping estimate: $3.00
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @jewel.bullet_1 %>
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @jewel.bullet_2 %>
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @jewel.bullet_3 %>
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @jewel.bullet_4 %>
    </p>
</div>
  </div>

</div>

<div class="footer-container">
  <div class="follow">
    <p style=color:#888888>
      Follow Us
    </p>
    <p>
      <a href="http://instagram.com/chaunceyandcoco" target="_blank">
        <i class="fa fa-instagram fa-2x" aria-hidden="true"></i>
      </a>
    </p>
  </div>
  <div class="footer">
    <%=link_to policies_path do%>POLICIES<%end%> &copy; chaunceyandcoco.com All Rights Reserved

  </div>

</div>
