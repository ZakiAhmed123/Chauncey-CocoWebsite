<div class="header">
<%=link_to root_path do%>
<div class="header-title-container">
  <p class="header-title">
    Chauncey AND Coco
  </p>
  <p class="header-subtitle">
    <%= image_tag 'logo.png' %>
    Handmade in HTX
    <%= image_tag 'logo.png' %>
  </p>
</div>
<%end%>
</div>
<div class="lookbook-container">

  <div class="sidebar">
    <ul>
      <li>
        <%= link_to collection_path do%>COLLECTION
        <%end%>
      </li>
      <li>
        <%=link_to products_path do%>APPAREL<%end%>
      </li>
      <li>
        <%=link_to gifts_path do %>GIFTS<%end%>
      </li>
      <li>
        <%=link_to jewels_path do%>JEWELRY<%end%>
      </li>
      <li>
        <%=link_to about_path do%>
        ABOUT US<%end%>
      </li>
      <li>
        <%=link_to contact_path do%>CONTACT US<%end%>
      </li>
      <li>
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>(CART)
      </li>
    </ul>

  </div>
  <div class="view-container">
<%= image_tag "#{@gift.img_file}.jpg", {:class => "view_picture"} %>
<div class="item-info">
  <p class="item"><%= @gift.item%><p>
    <p style="font-size:25px;">
      <%= @gift.description%>
    </p>
    <p style="font-size:30px;">
      <%= number_to_currency(@gift.price.to_i) %>
    </p>
    <p style=margin:5px;font-size:25px;>
      Quantity
    </p>
<%= form_for @gift do |gift| %>
    <%= gift.number_field :quantity, :value => 1, :max => 10, :min => 1, :class => 'number_field' %>
<%end%>

<div class="addtocart">
      ADD TO CART
    </div>
    <p>
      Shipping estimate: $3.00
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @gift.bullet_1 %>
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @gift.bullet_2 %>
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @gift.bullet_3 %>
    </p>
    <p style="font-size:15px;">
      &#8226;<%= @gift.bullet_4 %>
    </p>
</div>
  </div>

</div>
<div class="footer-container">
  <div class="follow">
    <p> Follow us </p>
<p><i class="fa fa-instagram fa-lg" aria-hidden="true"></i>
<i class="fa fa-facebook-square fa-lg" aria-hidden="true"></i></p>
  </div>
<div class="footer">
  <%=link_to policies_path do%>Privacy Policy<%end%> | Terms of Use | Refunds & Exchanges | &copy; chaunceyandcoco.com All Rights Reserved
</div>

</div>
